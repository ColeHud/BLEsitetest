<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.umich.eecs.lab11.summon" version="0.0.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Summon</name>
    <description>
        The user interface medium for the Internet of Things.
    </description>
    <author email="tzachari@umich.edu" href="http://lab11.eecs.umich.edu">
        Lab11
    </author>
    <icon src="res/icon.png" />
    <content src="index.html" />
    <preference name="android-minSdkVersion" value="17" />
    <preference name="android-targetSdkVersion" value="17" />
    <preference name="SplashScreenDelay" value="0" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-navigation href="*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
